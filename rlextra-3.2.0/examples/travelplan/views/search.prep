{{script}}
import datetime
debug=False
today = datetime.date.today()
thisMonth = today.month
thisYear = today.year
thisDay = today.day
strToday = str(today)
{{endscript}}
{{app.doHeader(onload="javascript:genMonYearOptions('oMonYear', '"+strToday+"','0000-00-00','l');genMonYearOptions('rMonYear','"+strToday+"','0000-00-00','l');setDayOptions('oDay','"+strToday+"','l');")}}
